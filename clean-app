#!/bin/bash

echo "ðŸ§¹ Cleaning up rag-chat-assistant..."

# Delete Chroma vector database
CHROMA_DB_PATH="app/databases/chroma_db"
if [ -d "$CHROMA_DB_PATH" ]; then
    echo "ðŸ—‘ Removing vector store at $CHROMA_DB_PATH"
    rm -rf "$CHROMA_DB_PATH"
else
    echo "âœ… No Chroma DB found, skipping."
fi

# Delete Ollama model logs
if [ -f "ollama.log" ]; then
    echo "ðŸ—‘ Removing Ollama log"
    rm -f ollama.log
fi

# Stop and remove Docker containers, networks, etc.
echo "ðŸ›‘ Stopping and cleaning Docker environment..."
docker-compose down -v --remove-orphans

echo "âœ… Cleanup complete."